@model IEnumerable<Army_Constractor.Models.Mount>

@{
    ViewBag.Title = "Index";
}

<h2>Ездовые животные</h2>

<p>
    @Html.ActionLink("Создать новое", "Create", null, new { @class = "actionlinks" })
</p>

@foreach (var item in Model)
{
    <table class="tableElement" border="1">
        <tr>
            <td colspan="8" style="font-size:x-large">@item.MountName</td>
        </tr>
        <tr>
            <td>Пгл</td>
            <td>Брб</td>
            <td>Атк</td>
            <td>Защ</td>
            <td>Хрб</td>
            <td>Двж</td>
            <td>Плт</td>
            <td rowspan="8" style="font-size:xx-large" id="price">
                @item.Price
            </td>
        </tr>
        <tr>
            <td>
                @item.MountAbsorb
            </td>
            <td>
                @item.MountArmorIgnore
            </td>
            <td>
                <script type="text/javascript">
                    document.write(@item.MountRank
                        + @item.MountAttBonus);
                </script>
            </td>
            <td>
                <script type="text/javascript">
                    document.write(@item.MountDefBonus
                        + @item.MountRank);
                </script>
            </td>
            <td>
                @item.MountRange
            </td>
            <td>
                @item.MountMove
            </td>
            <td>
                @Html.CheckBoxFor(m => item.Flying)
            </td>
        </tr>
        <tr>
            <td align="right" colspan="7" style="font-size:large">Стоимость:</td>
        </tr>
        <tr>
            <td colspan="7">
                @Html.ActionLink("Редактировать", "Edit", new { id = item.MountID }, new { @class = "actionlinks" }) |
                @Html.ActionLink("Подробнее", "Details", new { id = item.MountID }, new { @class = "actionlinks" }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.MountID }, new { @class = "actionlinks" })
            </td>
        </tr>
    </table>
}


