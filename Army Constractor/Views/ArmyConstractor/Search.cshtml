            </tr>
            <tr>
                <td>Брб</td>
                <td>Рад</td>
                <td>Двр</td>
                <td>Пар</td>
                <td rowspan="8" style="font-size:xx-large" id="price">
                    @item.Price
                </td>
            </tr>
            <tr>
                <td>
                    @item.MelWeapArmorIgnore
                </td>
                <td>
                    @item.Range
                </td>
                <td>
                    @Html.CheckBoxFor(m => item.TwoHanded)
                </td>
                <td>
                    @Html.CheckBoxFor(m => item.Pare)
                </td>
            </tr>
            <tr>
                <td align="right" colspan="4" style="font-size:large">Стоимость:</td>
            </tr>
            <tr>
                <td colspan="4">
                    @Html.ActionLink("Редактировать", "Edit", "MeleeWeapons", new { id = item.MeleeWeaponID }, new { @class = "actionlinks" }) |
                    @Html.ActionLink("Подробнее", "Details", "MeleeWeapons", new { id = item.MeleeWeaponID }, new { @class = "actionlinks" }) |
                    @Html.ActionLink("Удалить", "Delete", "MeleeWeapons", new { id = item.MeleeWeaponID }, new { @class = "actionlinks" })
                </td>
            </tr>
        </table>
    }
</div>
