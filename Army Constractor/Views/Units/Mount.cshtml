@model Army_Constractor.Models.Unit

@{
    ViewBag.Title = "Details";
}

<table class="tableElement" border="1">
    <tr>
        <td colspan="8" style="font-size:x-large">@Model.Mount.MountName</td>
    </tr>
    <tr>
        <td>Пгл</td>
        <td>Брб</td>
        <td>Атк</td>
        <td>Защ</td>
        <td>Хрб</td>
        <td>Двж</td>
        <td>Плт</td>
        <td rowspan="8" style="font-size:xx-large" id="price">
            @Model.Mount.Price
        </td>
    </tr>
    <tr>
        <td>
            @Model.Mount.MountAbsorb
        </td>
        <td>
            @Model.Mount.MountArmorIgnore
        </td>
        <td>
            <script type="text/javascript">
                    document.write(@Model.Mount.MountRank
                        + @Model.Mount.MountAttBonus);
            </script>
        </td>
        <td>
            <script type="text/javascript">
                    document.write(@Model.Mount.MountDefBonus
                        + @Model.Mount.MountRank);
            </script>
        </td>
        <td>
            @Model.Mount.MountRange
        </td>
        <td>
            @Model.Mount.MountMove
        </td>
        <td>
            @Html.CheckBoxFor(m => Model.Mount.Flying)
        </td>
    </tr>
    <tr>
        <td align="right" colspan="7" style="font-size:large">Стоимость:</td>
    </tr>
    <tr>
        <td colspan="7">
            @*@Html.ActionLink("Редактировать", "Edit", new { id = Model.Mount.MountID }) |
            @Html.ActionLink("Подробнее", "Details", new { id = Model.Mount.MountID }) |
            @Html.ActionLink("Удалить", "Delete", new { id = Model.Mount.MountID })*@
        </td>
    </tr>
</table>