            </td>
        </tr>
        <tr>
            <td>Атк</td>
            <td>Рад</td>
            <td>Брб</td>
        </tr>
        <tr>
            <td class="tableCaracteristic">
                <script type="text/javascript">
                    document.write(@Html.DisplayFor(modelitem => item.RangeWeapon.RanWeapAttBonus)
                        + @Html.DisplayFor(modelitem => item.RecrutType.RecrutTypeAttBonus))
                </script>
            </td>
            <td class="tableCaracteristic">
                <script type="text/javascript">
                    document.write(@Html.DisplayFor(modelitem => item.RangeWeapon.RanWeapRange))
                </script>
            </td>
            <td class="tableCaracteristic">
                <script type="text/javascript">
                    document.write(@Html.DisplayFor(modelitem => item.RangeWeapon.RanWeapArmorIgnore))
                </script>
            </td>
            <td class="tableCaracteristic">
                <script type="text/javascript">
                    document.write(@Html.DisplayFor(modelitem => item.RecrutType.RecrutTypeAbsorb)
                        + @Html.DisplayFor(modelitem => item.Armor.ArmorAbsorb))
                </script>
            </td>
            <td class="tableCaracteristic">
                <script type="text/javascript">
                    document.write(@Html.DisplayFor(modelitem => item.RecrutType.RecrutTypeArmorIgnore)
                        + @Html.DisplayFor(modelitem => item.MeleeWeapon.MelWeapArmorIgnore) + "/")
                    document.write(@Html.DisplayFor(modelitem => item.RecrutType.RecrutTypeArmorIgnore)
                        + @Html.DisplayFor(modelitem => item.SecondWeapon.MelWeapArmorIgnore))
                </script>
            </td>
            <td class="tableCaracteristic">
                <script type="text/javascript">
                    document.write(@Html.DisplayFor(modelitem => item.RecrutType.RecrutTypeAttBonus)
                        + @Html.DisplayFor(modelitem => item.RecrutType.RecrutTypeRank));
                </script>
            </td>
            <td class="tableCaracteristic">
                <script type="text/javascript">
                    document.write(@Html.DisplayFor(modelitem => item.MeleeWeapon.Range) + "/"
                        + @Html.DisplayFor(modelitem => item.SecondWeapon.Range));
                </script>
            </td>
            <td class="tableCaracteristic">
                <script type="text/javascript">
                    document.write(@Html.DisplayFor(modelitem => item.RecrutType.RecrutTypeDefBonus)
                        + @Html.DisplayFor(modelitem => item.RecrutType.RecrutTypeRank)
                        + @Html.DisplayFor(modelitem => item.Shield.ShieldDefBonus));
                </script>
            </td>
            <td class="tableCaracteristic">
                <script type="text/javascript">
                    document.write(@Html.DisplayFor(modelitem => item.RecrutType.RecrutTypeBraveryBonus)
                        + @Html.DisplayFor(modelitem => item.RecrutType.RecrutTypeRank));
                </script>
            </td>
            <td class="tableCaracteristic">
                @Html.DisplayFor(modelitem => item.RecrutType.RecrutTypeMove)
            </td>
            <td class="tableCaracteristic">
                @Html.DisplayFor(modelitem => item.NumberOfCombatants)
            </td>
        </tr>
        <tr>
            <td align="right" colspan="11" style="font-size:large">Стоимость:</td>
        </tr>
        <tr>
            <td colspan="11">
                @Html.ActionLink("Редактировать", "Edit", new { id = item.UnitID }) |
                @Html.ActionLink("Подробнее", "Details", new { id = item.UnitID }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.UnitID })
            </td>
        </tr>
    </table>
}









