@model IEnumerable<Army_Constractor.Models.RecrutType>

@{
    ViewBag.Title = "Index";
}

<h2>Рекруты</h2>

<p>
    @Html.ActionLink("Создать нового", "Create", null, new { @class = "actionlinks" })
</p>

@foreach (var item in Model)
{
    <table class="tableElement" border="1">
        <tr>
            <td colspan="7" style="font-size:x-large">@item.RecrutTypeName</td>
        </tr>
        <tr>
            <td>Пгл</td>
            <td>Брб</td>
            <td>Атк</td>
            <td>Защ</td>
            <td>Хрб</td>
            <td>Двж</td>
            <td rowspan="8" style="font-size:xx-large" id="price">
               @item.Price
            </td>
        </tr>
        <tr>
            <td>
                @item.RecrutTypeArmorIgnore
            </td>
            <td>
                @item.RecrutTypeAbsorb
            </td>
            <td>
                <script type="text/javascript">
                    document.write(@item.RecrutTypeAttBonus
                        + @item.RecrutTypeRank);
                </script>
            </td>
            <td>
                <script type="text/javascript">
                    document.write(@item.RecrutTypeDefBonus
                        + @item.RecrutTypeRank);
                </script>
            </td>
            <td>
                <script type="text/javascript">
                    document.write(@item.RecrutTypeBraveryBonus
                        + @item.RecrutTypeRank);
                </script>
            </td>
            <td>
                @item.RecrutTypeMove
            </td>
        </tr>
        <tr>
            <td align="right" colspan="6" style="font-size:large">Стоимость:</td>
        </tr>
        <tr>
            <td colspan="6">
                @Html.ActionLink("Редактировать", "Edit", new { id = item.RecrutTypeID }, new { @class = "actionlinks" }) |
                @Html.ActionLink("Подробнее", "Details", new { id = item.RecrutTypeID }, new { @class = "actionlinks" }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.RecrutTypeID }, new { @class = "actionlinks" })
            </td>
        </tr>
    </table>
}
