@model Army_Constractor.Models.RecrutType

@{
    /**/

    ViewBag.Title = "Delete";
}

<h2>Удалить рекрута</h2>

<h3>Вы уверены?</h3>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="Удалить" class="btn btn-default" /> |
        @Html.ActionLink("Назад", "Index")
    </div>
}
<table class="detailtables" border="1">
    <tr>
        <td colspan="2" style="font-size:x-large">@Html.DisplayFor(model => model.RecrutTypeName)</td>
    </tr>
    <tr>
        <td>@Html.DisplayNameFor(model => model.RecrutTypeAbsorb)</td>
        <td>@Html.DisplayFor(model => model.RecrutTypeAbsorb)</td>
    </tr>
    <tr>
        <td>@Html.DisplayNameFor(model => model.RecrutTypeArmorIgnore)</td>
        <td>@Html.DisplayFor(model => model.RecrutTypeArmorIgnore)</td>
    </tr>
    <tr>
        <td>@Html.DisplayNameFor(model => model.RecrutTypeAttBonus)</td>
        <td>@Html.DisplayFor(model => model.RecrutTypeAttBonus)</td>
    </tr>
    <tr>
        <td>@Html.DisplayNameFor(model => model.RecrutTypeDefBonus)</td>
        <td>@Html.DisplayFor(model => model.RecrutTypeDefBonus)</td>
    </tr>
    <tr>
        <td>@Html.DisplayNameFor(model => model.RecrutTypeRank)</td>
        <td>@Html.DisplayFor(model => model.RecrutTypeRank)</td>
    </tr>
    <tr>
        <td>@Html.DisplayNameFor(model => model.RecrutTypeBraveryBonus)</td>
        <td>@Html.DisplayFor(model => model.RecrutTypeBraveryBonus)</td>
    </tr>
    <tr>
        <td>@Html.DisplayNameFor(model => model.RecrutTypeMove)</td>
        <td>@Html.DisplayFor(model => model.RecrutTypeMove)</td>
    </tr>
    <tr>
        <td>Стоимость:</td>
        <td>
            <script type="text/javascript">
                        var charPrices = [[@Html.DisplayFor(model => model.RecrutTypeAbsorb),5],
                            [@Html.DisplayFor(model => model.RecrutTypeArmorIgnore),5],
                            [@Html.DisplayFor(model => model.RecrutTypeAttBonus),5],
                            [@Html.DisplayFor(model => model.RecrutTypeBraveryBonus),5],
                            [@Html.DisplayFor(model => model.RecrutTypeDefBonus),5],
                            [@Html.DisplayFor(model => model.RecrutTypeMove),2],
                            [@Html.DisplayFor(model => model.RecrutTypeRank),10]];
                        var totalPrice = 0;
                        for (var i = 0; i < charPrices.length; i++) {
                            if (!isNaN(charPrices[i][0])) {
                                totalPrice += charPrices[i][1] * charPrices[i][0]};};
                        document.write(totalPrice);
            </script>
        </td>
    </tr>
</table>
@Html.DisplayFor(model => model.Description)